document.getElementById('u_exp9x_print').addEventListener('click', function () {
    // Remove previous print area if any
    let oldPrint = document.querySelector('.print-area');
    if (oldPrint) oldPrint.remove();

    // Clone data from user info and expenses table
    const userName = document.getElementById('u_exp9x_name').value || document.getElementById('pharmacist-name').textContent;
    const department = document.getElementById('u_exp9x_department').value || '';
    const period = document.getElementById('u_exp9x_period').value || '';
    const total = document.getElementById('u_exp9x_total').textContent;

    // Get year & month for print heading
    const year = document.getElementById('u_exp9x_view_year').value;
    const month = document.getElementById('u_exp9x_view_month').selectedOptions[0]?.text || '';

    // Clone the expenses table data
    const table = document.getElementById('u_exp9x_expenses_table').cloneNode(true);

    // Remove the "Actions" column for printing
    const actionColIndex = Array.from(table.rows[0].cells).findIndex(cell => cell.textContent === "Actions");
    if (actionColIndex !== -1) {
        for (let row of table.rows) {
            row.deleteCell(actionColIndex);
        }
    }
    table.classList.add('print-table');

    // Compose the print area
    const printDiv = document.createElement('div');
    printDiv.className = 'print-area';
    printDiv.innerHTML = `
      <div class="print-letterhead">
        <img src="images/logo.png" alt="Logo">
        <div class="print-company-details">
            <div>Al Salam Retail Pharmacy</div>
            <div>Expense Request Report</div>
            <div>Period: <b>${month} ${year}</b></div>
        </div>
      </div>
      <div class="print-title">Expense Requests Summary</div>
      <div>
        <b>Employee:</b> ${userName} &nbsp; &nbsp; 
        <b>Department:</b> ${department} &nbsp; &nbsp; 
        <b>Period:</b> ${period || (month + " " + year)}
      </div>
    `;
    printDiv.appendChild(table);

    printDiv.innerHTML += `
      <div class="print-title" style="font-size:1.15em; margin-top:24px;">Total Approved: <b>${total} OMR</b></div>
      <div class="print-footer">
        Printed on: ${new Date().toLocaleString()} <br>
        Designed by Pharmacist: MOHAMED HAMID
      </div>
    `;
    document.body.appendChild(printDiv);

    window.print();

    // Remove print area after print (to keep DOM clean)
    setTimeout(() => {
        if (printDiv) printDiv.remove();
    }, 500);
});

document.getElementById('u_exp9x_export_excel').addEventListener('click', function () {
    const year = document.getElementById('u_exp9x_view_year').value;
    const month = document.getElementById('u_exp9x_view_month').value;
    if (!year || !month) {
        alert('Please select year and month!');
        return;
    }
    fetch('/api/expense/export-excel', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({ year, month })
    })
    .then(res => {
        if (!res.ok) throw new Error('No data to export or server error');
        return res.blob();
    })
    .then(blob => {
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `expenses_${year}_${month}.xlsx`;
        document.body.appendChild(a);
        a.click();
        a.remove();
    })
    .catch(() => alert('Failed to export Excel.'));
});
// ========== PAGINATED USER REQUESTS ==========

function loadUserRequestsPaginated(page = 1, limit = 10) {
    sendRequest9x('GET', `/api/my-requests-paginated?page=${page}&limit=${limit}`, null, function(status, result) {
        if (status !== 200 || !result) {
            alert('Failed to fetch request history.');
            return;
        }

        const tbody = document.getElementById('user-requests-table').querySelector('tbody');
        tbody.innerHTML = '';

        if (result.data && result.data.length) {
            result.data.forEach(req => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>${req.id || ''}</td>
                    <td>${req.type || ''}</td>
                    <td>${req.details || req.reason || '-'}</td>
                    <td>${req.status || ''}</td>
                    <td>${req.created_at ? new Date(req.created_at).toLocaleString() : '-'}</td>
                `;
                tbody.appendChild(tr);
            });
        } else {
            const tr = document.createElement('tr');
            tr.innerHTML = `<td colspan="5" style="text-align:center;">No requests found.</td>`;
            tbody.appendChild(tr);
        }

        renderRequestsPagination(result.currentPage, result.totalPages);
    });
}

function renderRequestsPagination(current, total) {
    const container = document.getElementById('user-requests-pagination');
    container.innerHTML = '';

    if (total <= 1) return; // No need for pagination

    for (let i = 1; i <= total; i++) {
        const btn = document.createElement('button');
        btn.textContent = i;
        btn.className = (i === current) ? 'active' : '';
        btn.style.margin = '0 4px';
        btn.onclick = () => loadUserRequestsPaginated(i);
        container.appendChild(btn);
    }
}

// Auto-load on Request Center page
document.addEventListener('DOMContentLoaded', function() {
    if (window.location.pathname.includes('request-center-usrZ3v.html')) {
        setTimeout(() => loadUserRequestsPaginated(), 300); // Small delay for DOM to render
    }
});
